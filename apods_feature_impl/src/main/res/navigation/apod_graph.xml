<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/apod_graph"
    app:startDestination="@id/apodListFragment">

    <fragment
        android:id="@+id/apodDetailFragment"
        android:name="ru.aidar.apods_feature_impl.presentation.picture.PictureFragment"
        android:label="fragment_apod_detail"
        tools:layout="@layout/fragment_picture" >
        <argument
            android:name="pictureInfo"
            app:argType="ru.aidar.apods_feature_impl.presentation.list.model.ParcelableLocal" />
    </fragment>
    <fragment
        android:id="@+id/apodListFragment"
        android:name="ru.aidar.apods_feature_impl.presentation.list.ApodListFragment"
        android:label="ApodListFragment" >
        <action
            android:id="@+id/action_apodList_to_picture"
            app:destination="@id/apodDetailFragment" />
    </fragment>

    <deepLink
        android:id="@+id/apodDeepLink"
        app:uri="gpapp://apod_destination" />
</navigation>