<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/apa_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/detailFragment"
        android:name="ru.aidar.apa_feature_impl.presentation.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="astre"
            app:argType="ru.aidar.apa_feature_impl.data.model.ParcelableApa" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="ru.aidar.apa_feature_impl.presentation.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_search_to_astre"
            app:destination="@id/detailFragment" />
    </fragment>

    <deepLink
        android:id="@+id/deepLink"
        app:uri="gpapp://apa_destination" />

</navigation>